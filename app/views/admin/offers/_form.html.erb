<%= form_with(model: [:admin, offer]) do |form| %>
  <% if offer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
        <% offer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :rules, class: "form-label" %>
    <%= form.text_area :rules, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :product_ids, "Products", class: "form-label" %>
    <%= form.collection_select :product_ids, products, :id, :name, {}, multiple: true, class: "form-select", size: 5 %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
