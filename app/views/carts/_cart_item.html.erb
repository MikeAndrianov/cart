<%= content_tag :li, class: "list-group-item", id: dom_id(cart_item) do %>
  <div class="row align-items-center">
    <h1 class="col-1"><%= cart_item.product_img %></h1>
    <div class="col-3">
      <div class="fs-5">
        <%= cart_item.product_name %>
        <small class="text-muted">
          <%= cart_item.product_code %>
        </small>
      </div>
      <small><%= cart_item.price %></small>
    </div>
    <div class="offset-sm-2 offset-md-4 col col-md-2 d-flex justify-content-center align-items-center">
      <%= button_to "-", remove_cart_path, method: :delete, params: { product_id: cart_item.product_id }, class: "btn btn-outline-secondary mx-2" %>

        <h5 class="mb-0"><%= cart_item.quantity %></h5>

        <%= button_to "+", add_cart_path, method: :post, params: { product_id: cart_item.product_id }, class: "btn btn-outline-secondary mx-2" %>
    </div>
    <div class="col-2">
      <h5 class="mb-0"><%= cart_item.total_price %></h5>
    </div>
  </div>
<% end %>
